<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>
         <record id="stock_picking_form" model="ir.ui.view">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <!-- set group on button Not edit for Stock user -->
                <xpath expr="//form" position="attributes">
                    <attribute name="create">0</attribute>
                    <attribute name="edit">1</attribute>
                    <attribute name="groups">stock.group_stock_manager"</attribute>
                </xpath>
                <!-- set group on button cancel for Stock user -->
                <xpath expr="//button[@name='action_cancel']" position="attributes">
                    <attribute name="groups">stock.group_stock_manager</attribute>
                </xpath>
                <xpath expr="//field[@name='partner_id']" position="before">
                    <field name="purchase_number"/>
                    <field name="document_type"/>
                    <field name="budget_id"/>
                    <field name="years"/>
                    <field name="bru_officer_id"/>
<!--                    <field name="bru_officer_id"/>-->
                    <field name="detail"/>
                    <field name="po_id"/>

                </xpath>
                <xpath expr="//field[@name='min_date']" position="after">
                    <field name="name_id" string="เจ้าหน้าที่พัสดุ"/>
                    <field name="faculty_ids"/>
                    <field name="branch_id"/>
                    <field name="for_use"/>
                    <field name="product"/>
<!--                    <field name="product"/>-->
                    <field name="expenses"/>
                    <field name="activity"/>
                    <field name="remain_budg_id"/>
                </xpath>

                <xpath expr="//sheet/group" position="after">
                     <sheet>
                         <group col="12">
                                 <div colspan="6" style="padding:8px;">
                                     <label for = "people_purchase" />
                                        <field name="people_purchase" force_save="1" readonly="1">
                                            <tree>
                                                <field name="partner_id" />
                                                <field name="phone" />
                                                <field name="email" />
                                            </tree>
                                        </field>
                                 </div>
                                 <div colspan="6"  style="padding:8px;" >
                                    <label for ="people_check_id"/>
                                        <field name="people_check_id" force_save="1" readonly="1">
                                            <tree>
                                                <field name="partner_id" />
                                                <field name="phone" />
                                                <field name="email" />
                                            </tree>
                                        </field>
                                 </div>
                         </group>
                     </sheet>
                </xpath>
            </field>
        </record>
    </data>
</odoo>